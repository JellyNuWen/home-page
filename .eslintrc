{
  "extends": [
    "next"
  ],
  "overrides": [
    {
      "files": [
        "**/*.ts",
        "**/*.tsx"
      ],
      "extends": [
        "kaho/react",
        "kaho/ts"
      ],
      "rules": {
        "@typescript-eslint/member-delimiter-style": [
          "error",
          {
            "multiline": {
              "delimiter": "none",
              "requireLast": false
            },
            "singleline": {
              "delimiter": "semi",
              "requireLast": false
            }
          }
        ]
      },
      "parserOptions": {
        "project": "./tsconfig.json"
      }
    }
  ],
  "settings": {
    "node": {
      "resolvePaths": [
        "__dirname"
      ],
      "tryExtensions": [
        ".js",
        ".json",
        ".node",
        ".ts",
        ".d.ts",
        ".tsx"
      ]
    }
  }
}
